@model ListeleViewModel    
<div class="container mt-5">
    <div class="row">

        <div class="col-md-3">
            <div id="form" class="list-group mt-4 text-center border">
                <a href="/Home/" class="list-group-item list-group-item-action bn text-primary-emphasis">
                    Tüm Anketler
                </a>                
                @foreach (var kategori in Model.Kategoriler)
                {
                    if (ViewBag.kategoriId == kategori.Id)
                    {
                        <a href="/home/listele/@(kategori.Id)" style="background-color: #CFE2FF"  class="list-group-item list-group-item-action bn text-primary-emphasis ">@kategori.Ad</a>
                    }
                    else
                    {
                        <a href="/home/listele/@(kategori.Id)" class="list-group-item list-group-item-action bn text-primary-emphasis ">@kategori.Ad</a>
                    }

                }
            </div>
        </div>
        
        <div style="margin-top=25px" class="col-md-9">
            <div class="row">
                    <h2 style="margin-left: 30%; margin-bottom: 3%; ">@ViewBag.secilenKategori Anketleri</h2>
                    @foreach (var anket in Model.Anketler)
                    {
                        <div class="col-md-3">
                            <a href="/home/detay/@(anket.Id)">
                                <div class="card text-center bn img-size align-items-center" style="width: 15rem; border:none;">
                                    <img src="/img/@(anket.Resim)" class="card-img-top" style="width:100px; height:100px;">
                                    <div class="card-body">
                                        <h5 class="card-title">@anket.Ad</h5>
                                        <p class="card-text">@anket.KısaAciklama</p>
                                    </div>
                                </div>
                            </a>

                        </div>
                    }
            </div>
        </div>
    </div>
    </div>
    </div>